<?xml version="1.0" encoding="UTF-8"?>
<project name="MyProject" default="jar" basedir=".">

    <!-- Set global properties for this build -->
    <property name="src.dir" location="src"/>
    <property name="build.dir" location="build/classes"/>
    <property name="dist.dir" location="dist"/>
    <property name="lib.dir" location="dist/lib"/>
    <property name="jar.name" value="test.jar"/>
    <property name="main.class" value="com.seeinfobiz.main.Main"/>

    <!-- Create the directories needed -->
    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>

    <!-- Copy resources -->
    <target name="copy-resources" depends="init">
        <copy todir="${build.dir}">
            <fileset dir="${src.dir}" includes="**/*.properties, **/*.xml, **/*.txt"/>
        </copy>
    </target>

    <!-- Compile the Java source files -->
    <target name="compile" depends="copy-resources">
        <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false">
            <classpath>
                <fileset dir="${lib.dir}" includes="**/*.jar"/>
            </classpath>
        </javac>
    </target>

    <!-- Create the JAR file -->
    <target name="jar" depends="compile">
        <mkdir dir="${dist.dir}"/>
        <jar destfile="${dist.dir}/${jar.name}" basedir="${build.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>
    </target>

    <!-- Clean the build directory -->
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>
</project>
